---
interface Props {
	title: string;
	description: string;
	image: string;
}

const { title, description, image } = Astro.props;
---

<article class="blog-card">
	<img src={image} alt={title} />
	<div class="content">
		<h3>{title}</h3>
		<p>{description}</p>
	</div>
</article>

<style lang="scss">
	.blog-card{
		img{
			width: 100%;
			aspect-ratio: 16/9;
			object-fit: cover;
			border-radius: .25em;
		}
		.content{
			h3{
				margin-top: .25em;
				text-decoration: none;
			}
			p{
				font-size: 1rem;
				line-height: 120%;
				line-clamp: 2;
				-webkit-line-clamp: 2;
				text-overflow: ellipsis;
				overflow: hidden;
			}
		}
	}
</style>