---
interface Props {
	title: string;
	href: string;
	icon: string;
	className: string;
	tab: boolean;
}


const { href, title, className, icon, tab } = Astro.props;

const calendar = '<svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"> <path d="M15 2h2v2h4v18H3V4h4V2h2v2h6V2zM5 8h14V6H5v2zm0 2v10h14V10H5z" fill="currentColor"/> </svg>'

---
<a 
	class={`button ${className}`} 
	href={href}
	target="_blank"
>
	{
		icon ? (	
				<div class="icon" set:html={icon} />
			) : (
			<>
			</>
		)
	}

	{title}
</a>

<style lang="scss">
	@use "../styles/base/typography" as *;


	button, .button{
		@include text-button;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		padding: .75rem 1.5rem;
		margin-top: 1rem;

		background-color: var(--color-accent-1);
		border-radius: .375rem;
		border: 1px solid var(--color-foreground);

		transition: background-color 0.05s;

		&:hover{
			border: 1px solid var(--color-foreground);
		}
	}
	.icon {
		width: 1em;
		height: 1em;
		margin-right: .3em;
	}
</style>